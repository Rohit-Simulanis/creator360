<!DOCTYPE html>
<html>
   <%- include('partials/header') %>
   <body>
       
      <!-- Top Bar Start -->
      <div class="topbar">
         <!-- LOGO -->
         <%- include('partials/top-bar') %>
         <!--end logo-->
         </div>
      <!-- Top Bar End -->
      <div class="page-wrapper">
         <!-- Left Sidenav -->
         <%- include('partials/side-bar') %>
         <!-- end left-sidenav-->
        <!-- Page Content-->
        <div class="page-content">
            <div class="container-fluid">
                <!-- Page-Title -->
                <div class="row">
                    <div class="col-sm-12">
                        <div class="page-title-box">
                            <div class="float-right">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item active">Add User</li>
                                </ol>
                            </div>
                            <h4 class="page-title">Add User</h4>
                        </div>
                        <!--end page-title-box-->
                    </div>
                    <!--end col-->
                </div>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-v-center justify-content-between">
                                    <h3 class="mt-0">Add License</h3>
                                    <a href="/licenses" class="btn btn-danger waves-effect m-l-5">Back</a>
                                </div>
                                <% if (validationError) { %>
                                    <ul class="text-left" style="color:red;">
                                    <% for(var i = 0; i < validationError.length; i++){ %>
                                        <li style="list-style: none;color:red;"><%= validationError[i].msg %> </li>
                                    <% } %>
                                    </ul>
                                <% } %>
                                <form class="form-parsley"  action="/licenses/add-license" method="post" id="addLicenseForm">
                                    <div class="form-group"><label>License Name*</label> 
                                      <input class="form-control" type="text" name="license_name" placeholder="License Name" value="<%= license_name %>">
                                    </div>
                                    <div class="form-group"><label>License Description*</label> 
                                      <input class="form-control" type="text" name="license_description" placeholder="License Description" value="<%= license_description %>">
                                    </div>
                                    <div class="form-group"><label>Price*</label> 
                                        <input class="form-control" type="text" name="price" placeholder="Price" value="<%= price %>">
                                      </div>
                                    <div class="form-group"><label>License Type*</label> 
                                      <select class="form-control" name="license_type">
                                          <option value="">Select Type</option>
                                          <option value="limited">Limited</option>
                                          <option value="unlimited">Unlimited</option>
                                      </select>
                                    </div>
                                    <div class="form-group"><label>Project Count</label> 
                                      <input class="form-control" type="text" name="project_count" placeholder="Project Count" value="<%= project_count %>">
                                    </div>
                                    <div class="form-group"><label>Scene Count*</label> 
                                      <input class="form-control" type="text" name="scene_count" placeholder="Scene Count" value="<%= scene_count %>">
                                    </div>
                                    <div class="form-group"><label>Status*</label> 
                                        <select class="form-control" name="status">
                                            <option value="">Select Status</option>
                                            <option value="active">Active</option>
                                            <option value="inactive">Inactive</option>
                                        </select>
                                      </div>
                                    <div class="form-group mb-0"><button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button> </div>
                                    <!--end form-group-->
                                </form>
                                <!--end form-->
                            </div>
                            <!--end card-body-->
                        </div>
                        <!--end card-->
                    </div><!-- end col -->
                    
                </div><!-- end row -->
            </div><!-- container -->
            <%- include('partials/footer') %>
            <!--end footer-->
         </div>
         <!-- end page content -->
      </div>
      <!-- end page-wrapper -->
      <script type="text/javascript">
        $(document).ready(function () {
            $('#addLicenseForm').validate({ // initialize the plugin
                rules: {
                    license_name: {
                        required: true,
                    },
                    license_description: {
                        required: true,
                    },
                    price: {
                        required: true,
                    },
                    license_type: {
                        required: true,
                    },
                    project_count: {
                        digits: true,
                        minlength:1,
                        maxlength:10
                    },
                    scene_count: {
                        digits: true,
                        minlength:1,
                        maxlength:20
                    },
                    status: {
                        required: true,
                    }
                },
                messages: {
                    license_name: {
                        required: "License Name is required. <i class='icon-info icons'></i>",
                    },
                    license_description: {
                        required: "License Description is required.  <i class='icon-info icons'></i>",
                    },
                    license_type: {
                        required: "License Type is required.  <i class='icon-info icons'></i>",
                    },
                    project_count: {
                        digits: "Project Count should be a number.  <i class='icon-info icons'></i>",
                        minlength: "Project Count must be 1 digits.  <i class='icon-info icons'></i>",
                        maxlength: "Project Count must be 10 digits.  <i class='icon-info icons'></i>",
                    },
                    scene_count: {
                        digits: "Scene Count should be a number.  <i class='icon-info icons'></i>",
                        minlength: "Scene Count must be 1 digits.  <i class='icon-info icons'></i>",
                        maxlength: "Scene Count must be 20 digits.  <i class='icon-info icons'></i>",
                    }
                }
            });
        });
    </script>
   </body>
</html>
